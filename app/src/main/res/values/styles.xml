<resources>

    <!-- Base application theme. -->
    <style name="MXAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="background_color">@color/white</item>
        <item name="text_color">@color/black</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>


    <style name="task_level">
        <item name="android:layout_width">5.0dip</item>
        <item name="android:layout_height">fill_parent</item>
    </style>


    <style name="padding_left_right">
        <item name="android:paddingLeft">@dimen/normal_space</item>
        <item name="android:paddingRight">@dimen/normal_space</item>
    </style>

    <style name="rl_row" parent="@style/padding_left_right">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:minHeight">@dimen/row_height</item>
    </style>


    <style name="cellRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normal_space</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/card</item>
        <item name="android:layout_marginLeft">@dimen/half_normal_space</item>
        <item name="android:layout_marginRight">@dimen/half_normal_space</item>
        <item name="android:minHeight">@dimen/row_height</item>
    </style>


    <style name="cellSwipLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="cellRowDiv">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/half_normal_space</item>
    </style>


    <style name="etPwd">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:digits">0123456789</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="textTableRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="div_center">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@color/divider_line</item>
    </style>


    <style name="edit_view">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/row_height</item>
        <item name="android:paddingLeft">@dimen/normal_space</item>
        <item name="android:paddingRight">@dimen/normal_space</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/row_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="Theme_light" parent="Theme.AppCompat.Light">
        <item name="background_color">@color/white</item>
        <item name="text_color">@color/black</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Theme_light</item>
        <item name="android:actionBarSize">40dp</item>
    </style>


    <style name="ActionBar.Solid.Theme_light" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_color</item>
        <item name="android:subtitleTextStyle">@style/subtitleTextStyle.Theme_light</item>
    </style>

    <style name="subtitleTextStyle.Theme_light" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/hint</item>
    </style>


</resources>
